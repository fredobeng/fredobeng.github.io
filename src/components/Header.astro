---
import siteConfig from '../data/site-config';
import Typed from 'typed.js';

const type = new Typed('#typewrite', {
    strings: ['read', 'write', 'think', 'code', 'learn', 'and *care'],
    typeSpeed: 50,
    backSpeed: 50,
    loop: true,
    showCursor: true,
    cursorChar: '|'
});
---

<header class="w-full max-w-3xl mx-auto mb-12 sm:mb-16">
    {
        siteConfig.logo && siteConfig.logo?.src ? (
            <a href="/">
                <img src={siteConfig.logo.src} alt={siteConfig.logo.alt || ''} class="max-h-12" />
            </a>
        ) : (
            <a class="font-serif text-2xl leading-tight font-medium text-theme-foreground sm:text-4xl" href="/">
                {siteConfig.title}
            </a>
        )
    }
    <p class="text-sm leading-tight mt-1">Learning to <p id="typewrite"></p>{siteConfig.subtitle}</p>
</header>
